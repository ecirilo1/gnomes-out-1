          <% @gnomes.each do |gnome|%>
            <%= link_to(gnome_path(gnome)) do %>
              <div class="card-polaroid">
                <div class="polaroid">
                  <div class="polaroid-img" style="background-image:  url(<%= gnome.photo %>)" >
                  </div>
                  <div class="caption">
                    <h3><%=  gnome.name %></h3>
                    <p><strong><%= gnome.price %></strong>â‚¬ par jour</p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>
