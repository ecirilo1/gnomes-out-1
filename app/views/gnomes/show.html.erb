<div class="container">
  <div class="margin-navbar">

    <div id="gnome-presentation">

      <div class="card-show">
        <div class="gnome-detail"><%= image_tag @gnome.photo %></div>

        <div class="gnome-detail">
          <h1><%= @gnome.name %></h1>
          <%= if @gnome.category == "groupé"
            render 'shared/card-gnome-groupes'
          else
            render 'shared/card-gnome-solo'
          end %>


        <%= simple_form_for [ @gnome, @booking ] do |f| %>
          <%= f.input :date_start, as: :date, html5: true, label:"Date de début" %>
          <%= f.input :date_end, as: :date, html5: true, label:"Date de début" %>
          <%= f.submit "Faire sa réservation", class: "btn btn-primary btn-box-shadow t" %>
        <% end %>

        <%= link_to "Trouver un autre gnome", root_path, class:"btn btn-light mt-2"  %>
        </div>
      </div>
    </div>

  </div>
</div>
