<div class="container">
  <div class="margin-navbar">
    <h1>Réservez votre nain de jardin</h1>

      <div class="dual-containers">

      </div>

    <% @gnomes.each do |gnome|%>

    <div class="card-product">
      <img src="<%= gnome.photo %>" />
      <div class="card-product-infos">
        <h2><%= link_to gnome.name, gnome_path(gnome) %></h2>
        <p><strong><%= gnome.price %></strong>€ par jour</p>
      </div>
    </div>
    <% end %>
  </div>
</div>
